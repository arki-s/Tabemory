@model Tabemory.Models.Record

@{
    ViewData["Title"] = "Create";
}

    <h1>このレストランを登録しますか？</h1>
    <form method="post" action="">
        @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
        <div class="form-group">
            <label class="control-label">キャッチ</label>
            <input name="values" class="form-control" value="@Model.Genre_catch" disabled/>
            @* <span asp-validation-for="Name" class="text-danger"></span> *@
        </div>
        <div class="form-group">
            <label class="control-label">ジャンル</label>
            <input name="values" class="form-control" value="@Model.Genre_name" disabled/>
            @* <span asp-validation-for="Name" class="text-danger"></span> *@
        </div>
        <div class="form-group">
            <label class="control-label">名前</label>
            <input name="values" class="form-control" value="@Model.Name" disabled/>
            @* <span asp-validation-for="Name" class="text-danger"></span> *@
        </div>
        <div class="form-group">
            <label class="control-label">住所</label>
            <input name="values" class="form-control" value="@Model.Address" disabled>
            @* <span asp-validation-for="Description" class="text-danger"></span> *@
        </div>
        <div class="form-group">
            <label class="control-label">最寄り駅</label>
            <input name="values" class="form-control" value="@Model.Station_name" disabled/>
            @* <span asp-validation-for="Time" class="text-danger"></span> *@
        </div>
       <div class="form-group">
            <label class="control-label">営業日</label>
            <input name="values" class="form-control" value="@Model.Open" disabled/>
            @* <span asp-validation-for="Time" class="text-danger"></span> *@
        </div>
          <div class="form-group">
            <label class="control-label">定休日</label>
            <input name="values" class="form-control" value="@Model.Close" disabled/>
            @* <span asp-validation-for="Time" class="text-danger"></span> *@
        </div>
        <div class="form-group">
            <input name="values" class="form-control" value="@Model.Url" type="hidden" />
            @* <span asp-validation-for="Time" class="text-danger"></span> *@
        </div>
        </div>
           <div class="form-group">
            <input name="values" class="form-control" value="@Model.Photo" type="hidden"/>
            @* <span asp-validation-for="Time" class="text-danger"></span> *@
        </div>
    <div class="form-group">
        <input name="values" class="form-control" value="@Model.UserId" type="hidden" />
        @* <span asp-validation-for="Time" class="text-danger"></span> *@
    </div>
        <div class="form-group">
            <input type="submit" value="登録" class="btn btn-success" />
        </div>
        </form>